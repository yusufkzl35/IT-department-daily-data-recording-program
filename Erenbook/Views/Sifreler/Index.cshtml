@model IEnumerable<Erenbook.Models.Sifreler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_erenbook.cshtml";
}

<style>
    input[type=checkbox] {
        width: 30px;
        height: 30px
    }



    .table-bordered td, .table-bordered th {
        border: 1px solid #dee2e6;
        text-align: center;
    }
</style>
<br />

<div class="panel-body">

    <div class="container-fluid">

        <div class="row mb-2">
            <div class="col-sm-10">
                <h3>Kullanıcı Adları Ve Şifreleri</h3>

            </div>
            @Html.ActionLink("Şifre Ekle", "ekle", null, new { @class = "btn btn-success" })
        </div>

    </div>
    @using (Html.BeginForm("index", "Sifreler"))
    {
        <div class="pull-right col-md-8" style="margin-top:25px;">

            <div class="col-md-5">
                <input type="text" class="form-control pull-right" placeholder="Başlık Ara" name="aranan">
            </div>
            <br />
            <div class="col-md-4">

                <input type="submit" name="ara" value="Arama Yap" class="btn btn-primary pull-right"><br><br>
                <a class="btn btn-primary pull-right" href="/Sifreler/Index/">Kayıtlara Dön</a>

            </div>

        </div>

    }


    <br />

    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">


                <table class="table table-bordered table-hover table-striped">
                    <tr>
                        <th>Açıklama Başlığı</th>
                        <th>Kullanıcı Adı</th>
                        <th>Şifresi</th>
                        <th>Güncelle</th>

                    </tr>

                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.Birim</td>
                            <td>@x.Kullanici</td>
                            <td>@x.Sifre</td>



                            <!--   <td> <a href="/Gunluk/GunlukGetir/@x.id" class="btn btn-warning">Görüntüle</a></td>-->
                            <td> <a href="/Sifreler/guncelle/@x.id" class="btn btn-primary">Güncelle</a></td>
                            <!--   <td>@Html.ActionLink("Doküman Ekle / Gör", "Dokumanlar", new { sayfaid = x.id }, new { @class = "btn btn-success" })</td>  -->


                        </tr>



                    }

                </table>

            </div>
        </div>
    </div>
</div>
