@model IEnumerable<Erenbook.Models.DonanimBakim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_erenbook.cshtml";
}

<br />

<style>
    input[type=checkbox] {
        width: 25px;
        height: 25px;
       

    }
   
   

</style>


<div class="container-fluid">

    <div class="row mb-2">
        <div class="col-sm-10">
            <h3>Donanım Bakım Kayıtları 2021</h3>

        </div>
        @Html.ActionLink("Kayıt Ekle", "ekle", null, new { @class = "btn btn-success" })
    </div>

</div>
<br />

<div class="container-fluid">

    <div class="row mb-2">
        <div class="col-sm-9">


        </div>
        <h5><b>F 292 Rev.0/ 02.08.2021</b></h5>
    </div>

</div>

@using (Html.BeginForm("index", "DonanimBakim"))
{
<div class="pull-right col-md-8" style="margin-top:25px;">

    <div class="col-md-5">
        <input type="text" class="form-control pull-right" placeholder="Kullanıcı Ara" name="aranan">
    </div>
    <br />
    <div class="col-md-4">

        <input type="submit" name="ara" value="Arama Yap" class="btn btn-primary pull-right"><br><br>
        <a class="btn btn-primary pull-right" href="/DonanimBakim/Index/">Kayıtlara Dön</a>

    </div>
   

       
      

   

</div>

}

<br />

<div class="panel-body">

    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">


                <table class="table table-bordered table-hover table-striped">

                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Kullanici)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Departman)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Periyot1)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Periyot2)
                            </th>


                            <th>
                                @Html.DisplayNameFor(model => model.TemizlikBakim)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Yedek)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Sorumlu)
                            </th>

                            <th>
                                Form
                            </th>
                            <th>
                                Güncelle
                            </th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Kullanici)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Departman)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Periyot1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Periyot2)
                            </td>


                            <td>
                                @Html.DisplayFor(modelItem => item.TemizlikBakim)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Yedek)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sorumlu)
                            </td>

                            <td>
                                @Html.ActionLink("Gözat", "resimler", new { sayfaid = item.id }, new { @class = "btn btn-warning" })

                           

                            <td>
                                <a href="/DonanimBakim/Duzelt/@item.id" class="btn btn-primary">Güncelle</a>
                            </td>


                        </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>


   
</div>
