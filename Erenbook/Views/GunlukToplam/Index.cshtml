
@model IEnumerable<Erenbook.Models.Gunluk>



@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_erenbook.cshtml";
}


<br />
<div class="container-fluid">

    <div class="row mb-2">
        <div class="col-sm-10">
            <h3>Günlük Yapılan İşlemler Toplam Listesi</h3>

        </div>
        <!--<input type="button" onclick="printDiv('printableArea')" value="Kaydet / Yazdır" class="btn btn-success" />  -->
    </div>

</div>

<br />
@using (Html.BeginForm("index", "GunlukToplam"))
{
    <div class="pull-right col-md-8" style="margin-top:25px;">

        <div class="col-md-5">
            <input type="text" class="form-control pull-right" placeholder="Kişi Veya Kullanılan Malzeme Veya Yöntem Ara" name="aranan">
        </div>
        <br />
        <div class="col-md-4">

            <input type="submit" name="ara" value="Arama Yap" class="btn btn-primary pull-right"><br><br>
            <a class="btn btn-primary pull-right" href="/GunlukToplam/Index/">Listeye Dön</a>

        </div>

    </div>



}






<br />
<br />

<div class="panel-body">
    <div id="printableArea">

        <div id="printableArea">
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive">


                        <table class="table table-bordered table-hover table-striped">
                            <tr>
                                <th>Tarih</th>

                                <th>Kullanıcı Adı Soyadı</th>
                                <th>Kullanıcının Bölümü</th>

                                <th>Arıza Türü</th>
                                <th>Kullanılan Malzeme Veya Yöntem</th>
                                <th>Detaylar...</th>

                            </tr>

                            @foreach (var x in Model)
                            {
                                <tr>
                                    <th>@(x.TarihBaslangic.ToString("dd/MM/yyyy"))</th>

                                    <td>@x.AdSoyad</td>
                                    <td>@x.Bolum</td>

                                    <td>@x.ArizaTuru</td>
                                    <th>@x.Donanım</th>

                                    <td> <a href="/Gunluk/GunlukGetir/@x.id" class="btn btn-warning">Görüntüle</a></td>







                                </tr>

                            }

                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function printDiv(divName) {
        var printContents = document.getElementById(divName).innerHTML;
        var originalContents = document.body.innerHTML;

        document.body.innerHTML = printContents;

        window.print();

        document.body.innerHTML = originalContents;
    }
</script>





