
@model Erenbook.Models.Gunluk

@{
    ViewBag.Title = "GunlukGetir";
    Layout = "~/Views/Shared/_erenbook.cshtml";
}





<div id="printableArea">
    <div class="panel-body">




        <br />

        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">



                    @using (Html.BeginForm("RaporuGor", "Gunluk", FormMethod.Post))
                    {
                        <h4> @Html.DisplayFor(x => x.AdSoyad, new { @class = "form-control" }) adlı kullanıcının @Html.DisplayFor(x => x.TarihBaslangic, new { @class = "form-control" }) tarihli günlük raporu</h4>
                        <br />
                        <table border="1">

                            <tr>
                                <td width=200 height="35" colspan="3" align=center valign=middle><b>İŞLEM BAŞLANGIÇ TARİHİ</b></td>

                                <td width=100 colspan="1" align="center" valign=middle>  @Html.DisplayFor(x => x.TarihBaslangic, new { @class = "form-control" })</td>


                                <td width=200 height="35" colspan="3" align=center valign=middle><b>İŞLEM BAŞLANGIÇ SAATİ</b></td>

                                <td width=100 colspan="1" align="center" valign=middle>  @Html.DisplayFor(x => x.Ilk1, new { @class = "form-control" })</td>
                            </tr>

                            <tr>
                                <td width=300 height="35" colspan="4" align=center valign=middle><b>ADI SOYADI</b></td>
                                <td width=300 height="35" colspan="4" align=center valign=middle><b>DEPARTMANI</b></td>
                            </tr>
                            <tr>
                                <td width=300 height="35" colspan="4" align=center valign=middle> @Html.DisplayFor(x => x.AdSoyad, new { @class = "form-control" })</td>
                                <td width=300 height="35" colspan="4" align=center valign=middle> @Html.DisplayFor(x => x.Bolum, new { @class = "form-control" })</td>
                            </tr>

                            <tr>
                                <td width=200 height="35" colspan="2" align=center valign=middle> <b>ARIZA TÜRÜ</b></td>
                                <td width=400 height="35" colspan="6" align=center valign=middle> @Html.DisplayFor(x => x.ArizaTuru, new { @class = "form-control" })</td>
                            </tr>

                            <tr>
                                <td width=200 height="35" colspan="3" align=center valign=middle><b>İŞLEM BİTİŞ TARİHİ</b></td>

                                <td width=100 colspan="1" align="center" valign=middle>  @Html.DisplayFor(x => x.TarihBitis, new { @class = "form-control" })</td>


                                <td width=200 height="35" colspan="3" align=center valign=middle><b>İŞLEM BİTİŞ SAATİ</b></td>

                                <td width=100 colspan="1" align="center" valign=middle>  @Html.DisplayFor(x => x.Son1, new { @class = "form-control" })</td>
                            </tr>

                            <tr>
                                <td width=200 height="35" colspan="2" align=center valign=middle> <b>TOPLAM GEÇEN SÜRE</b></td>
                                <td width=400 height="35" colspan="6" align=center valign=middle> @Html.DisplayFor(x => x.GecenSure, new { @class = "form-control" })</td>
                            </tr>

                            <tr>
                                <td width=600 height="35" colspan="8" align=center valign=middle> <b>YAPILAN İŞLEM</b></td>
                            </tr>


                            <tr>

                                <td width=600 height="35" colspan="8" align="center" valign=middle> @Html.DisplayFor(x => x.YapilanIslem, new { @class = "form-control" })</td>


                            </tr>

                        </table>

                        <br />


                    }











                </div>
            </div>
        </div>
    </div>



</div>






<!--<input type="button" onclick="printDiv('printableArea')" value="Yazdır" class="btn btn-success" />-->
<br />
<script>
    function printDiv(divName) {
        var printContents = document.getElementById(divName).innerHTML;
        var originalContents = document.body.innerHTML;

        document.body.innerHTML = printContents;

        window.print();

        document.body.innerHTML = originalContents;
    }
</script>
<br />


