
@model IEnumerable<Erenbook.Models.Personel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_erenbook.cshtml";
}
<style>
    input[type=checkbox] {
        width: 30px;
        height: 30px
    }



    .table-bordered td, .table-bordered th {
        border: 1px solid #dee2e6;
        text-align: center;
    }
</style>

<div class="panel-body">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">

            <div class="row mb-2">
                <div class="col-sm-10">
                    <h3>Personel Bilgileri</h3>

                </div>
                @Html.ActionLink("Personel Ekle", "ekle", null, new { @class = "btn btn-success" })
            </div>

        </div><!-- /.container-fluid -->

    </section>

    @using (Html.BeginForm("index", "Personel"))
    {
<div class="pull-right col-md-8" style="margin-top:25px;">

   



    <div class="col-md-5">
        <input type="text" class="form-control pull-right" placeholder="Kişi giriniz" name="aranan">
    </div>
    <br />
    <div class="col-md-4">

        <input type="submit" name="ara" value="Kişi Ara.." class="btn btn-primary pull-right"><br><br>
        <a class="btn btn-primary pull-right" href="/Personel/Index/">Kayıtlara Dön</a>

    </div>

</div>



    }

    <br />

    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">


                <table class="table table-bordered table-hover table-striped">




                    <thead>

                        <tr>
                            <th>Adı-Soyadı</th>
                            <th>Departmanı</th>
                            <th>Dahili No</th>
                            <th>Server Vb. Şifreleri</th>
                            <th>Mail Adresi</th>
                            <th>Mail Şifresi</th>
                            <th>Pc Şifresi</th>
                            <th>Micro Şifresi</th>


                            <th>Güncelle</th>


                        </tr>
                    </thead>


                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>
                                <td> @item.Adi  @item.Soyadi</td>
                                <td>
                                    @item.Departman
                                </td>
                                <td>@item.DahiliNo</td>
                                <td>@item.CepNo</td>
                                <td>@item.Mail</td>
                                <td>@item.MailSifre</td>
                                <td>@item.PcSifre</td>
                                <td>@item.MicroSifre</td>


                                <td>
                                    @Html.ActionLink("Güncelle", "guncelle", new { id = item.id }, new { @class = "btn btn-primary " })
                                </td>
                            </tr>

                        </tbody>

                    }



                </table>



            </div>
        </div>
    </div>



</div>





