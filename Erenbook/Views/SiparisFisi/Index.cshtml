
@model IEnumerable<Erenbook.Models.MalSipFisi>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_erenbook.cshtml";
}

<br />

<style>
    input[type=checkbox] {
        width: 25px;
        height: 25px;
    }
    .table-bordered td, .table-bordered th {
        border: 1px solid #dee2e6;
        text-align: center;
    }
</style>


<div class="container-fluid">

    <div class="row mb-2">
        <div class="col-sm-10">
            <h3>Malzeme Sipariş Fişleri</h3>

        </div>
        @Html.ActionLink("Fiş Ekle", "ekle", null, new { @class = "btn btn-success" })
    </div>

</div>
<br />

<div class="container-fluid">

    <div class="row mb-2">
        <div class="col-sm-9">


        </div>
        <!--  <h5><b>F 292 Rev.0/ 02.08.2021</b></h5>-->
    </div>

</div>

@using (Html.BeginForm("index", "SiparisFisi"))
{
    <div class="pull-right col-md-8" style="margin-top:25px;">

        <div class="col-md-5">
            <input type="text" class="form-control pull-right" placeholder="Malzeme ara" name="aranan">
        </div>
        <br />
        <div class="col-md-4">

            <input type="submit" name="ara" value="Arama Yap" class="btn btn-primary pull-right"><br><br>
            <a class="btn btn-primary pull-right" href="/SiparisFisi/Index/">Kayıtlara Dön</a>

        </div>







    </div>

}

<br />

<div class="panel-body">

    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">


                <table class="table table-bordered table-hover table-striped">

                    <thead>
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.SiparisTarihi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MlzmListesi)
                            </th>



                            <th>
                                @Html.DisplayNameFor(model => model.Aciklama)
                            </th>

                           

                            <th>
                               Fiş Ekle/Gözat
                            </th>

                            <th>
                                Güncelle
                            </th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SiparisTarihi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MlzmListesi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Aciklama)
                                </td>
                               

                               

                                <td>
                                    @Html.ActionLink("Gözat", "resimler", new { sayfaid = item.id }, new { @class = "btn btn-warning" })



                                <td>
                                    <a href="/SiparisFisi/Duzelt/@item.id" class="btn btn-primary">Güncelle</a>
                                </td>


                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>



</div>
