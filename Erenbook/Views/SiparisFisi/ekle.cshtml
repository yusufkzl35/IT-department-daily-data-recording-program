@model Erenbook.Models.MalSipFisi

@{
    ViewBag.Title = "ekle";
    Layout = "~/Views/Shared/_erenbook.cshtml";
}

<br />
<style>
    input[type=checkbox] {
        width: 30px;
        height: 30px
    }
</style>

<div class="panel-body">

    <h2>Malzeme Sipariş Fişi Ekle</h2>
    <br />

    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">



                @using (Html.BeginForm("ekle", "SiparisFisi", FormMethod.Post))
                {
                    <table border="1">

                        <tr>
                            <td width=400 height="35" colspan="6" align=center valign=middle><b>Firma İsmi</b></td>

                            <td width=200 colspan="2" align="center" valign=middle> <b>Sipariş Tarihi</b></td>
                        </tr>
                        <tr>
                            <td width=400 height="35" colspan="6" align=center valign=middle> @Html.TextBoxFor(x => x.MlzmListesi, new { @class = "form-control" })</td>

                            <td width=200 colspan="2" align="center" valign=middle>  @Html.EditorFor(x => x.SiparisTarihi, new { @class = "form-control" })</td>
                        </tr>

                        <tr>
                            <td width=600 height="35" colspan="8" align=center valign=middle><b>AÇIKLAMA</b></td>

                        </tr>

                        <tr>
                            <td width=150 colspan="8" height="40" align=center valign=middle>@Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })</td>



                        </tr>
                        
                        

                    </table>

                    <br />
                    <button class="btn btn-success">Kaydet</button>

                }











            </div>
        </div>
    </div>
</div>