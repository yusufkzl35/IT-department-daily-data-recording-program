

<!doctype html>
<html lang="en">
<head>
    <title>Erenbook Giriş</title>
    <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"> 

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/login-form-19/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap py-5">
                        <div class="img d-flex align-items-center justify-content-center" style="background-image: url('/login-form-19/images/bg.jpg');"  ></div>
                        <h3 class="text-center mb-0">Hoşgeldiniz</h3>
                        <p class="text-center">Kullanıcı Adınızı Ve Şifrenizi Giriniz</p>

                       

                            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken();
                                <div class="panel-body">
                                    <div class="form-horizontal">


                                        <input type="text" class="form-control" placeholder="Kullanıcı Adı" name="kadi"><br /> <input type="password" class="form-control" placeholder="Şifre" name="sifre"><br /> <button type="submit" class="btn btn-primary btn-block">Oturum Aç</button>
                                    </div>
                                </div>

                            }



                           
                        </div>
                    </div>
            </div>
        </div>
    </section>

    <script src="~/login-form-19/js/jquery.min.js"></script>
    <script src="~/login-form-19/js/popper.js"></script>
    <script src="~/login-form-19/js/bootstrap.min.js"></script>
    <script src="~/login-form-19/js/main.js"></script>

</body>
</html>










