@model IEnumerable<Erenbook.Models.EskiProgramKayiti>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_erenbook.cshtml";
}

<br />
<div class="container-fluid">

    <div class="row mb-2">
        <div class="col-sm-10">
            <h3>02.08.2021-18.10.2021 Günlük Kayıt Listesi</h3>

        </div>
        <!--<input type="button" onclick="printDiv('printableArea')" value="Kaydet / Yazdır" class="btn btn-success" />  -->
    </div>

</div>

<br />
@using (Html.BeginForm("index", "OncekiKayit"))
{
    <div class="pull-right col-md-8" style="margin-top:25px;">

        <div class="col-md-5">
            <input type="text" class="form-control pull-right" placeholder="Kişi,Tarih Veya Kullanılan Malzeme Ara" name="aranan">
        </div>
        <br />
        <div class="col-md-4">

            <input type="submit" name="ara" value="Arama Yap" class="btn btn-primary pull-right"><br><br>
            <a class="btn btn-primary pull-right" href="/OncekiKayit/Index/">Listeye Dön</a>

        </div>

    </div>



}






<br />
<br />

<div class="panel-body">
    <div id="printableArea">

        <div id="printableArea">
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive">


                        <table class="table table-bordered table-hover table-striped">
                            <tr>
                                <th>İşlem Başlangıç Tarihi</th>
                                <th>İşlem Başlangıç Saati</th>
                                <th>Kullanıcı Adı Soyadı</th>
                                <th>Kullanıcının Bölümü</th>

                                <th>Arıza Türü</th>
                                <th>Kullanılan Malzeme Veya Yöntem</th>
                                <th>İşlem Bitiş Tarihi</th>
                                <th>İşlem Bitiş Saati</th>
                                <th>Toplam Geçen Süre (Dk)</th>
                                <th>Yapılan İşlem</th>
                            </tr>

                            @foreach (var x in Model)
                            {
                        <tr>
                            <th>@x.TarihBaslangic</th>
                            <th>@x.BaslangicSaati</th>
                            <td>@x.AdSoyad</td>
                            <td>@x.Bolum</td>

                            <td>@x.ArizaTuru</td>
                            <th>@x.Donanım</th>

                            <th>@x.TarihBitis</th>


                            <th>@x.BitisSaati</th>
                            <th>@x.GecenSure</th>
                            <th>@x.YapilanIslem</th>


                        </tr>

                            }

                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function printDiv(divName) {
        var printContents = document.getElementById(divName).innerHTML;
        var originalContents = document.body.innerHTML;

        document.body.innerHTML = printContents;

        window.print();

        document.body.innerHTML = originalContents;
    }
</script>


